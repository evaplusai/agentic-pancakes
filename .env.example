# API Keys
ANTHROPIC_API_KEY=sk-ant-your-api-key-here
TMDB_API_KEY=your-tmdb-api-key-here

# AgentDB Configuration
AGENTDB_PATH=./data/agentdb
AGENTDB_VECTOR_DIMENSIONS=768
AGENTDB_HNSW_M=16
AGENTDB_HNSW_EF_CONSTRUCTION=200

# SQLite Configuration
SQLITE_DB_PATH=./data/metadata.db

# Redis Configuration (Optional - for caching)
REDIS_URL=redis://localhost:6379
REDIS_ENABLED=false

# MCP Server Configuration
MCP_TRANSPORT=stdio
MCP_SSE_PORT=3000
MCP_LOG_LEVEL=info

# Application Configuration
NODE_ENV=development
LOG_LEVEL=debug
LOG_FILE=./logs/app.log

# Rate Limiting
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=60000

# TMDB API Configuration
TMDB_BASE_URL=https://api.themoviedb.org/3
TMDB_CACHE_TTL_DETAILS=3600
TMDB_CACHE_TTL_TRENDING=900
TMDB_RATE_LIMIT=40

# Matching Configuration
MATCHING_FORMULA_VERSION=static
VECTOR_SIM_WEIGHT=0.25
MOOD_SCORE_WEIGHT=0.30
INTENT_SCORE_WEIGHT=0.20
CONTEXT_SCORE_WEIGHT=0.15
TRENDING_SCORE_WEIGHT=0.10

# Learning Configuration
ENABLE_REASONING_BANK=false
ENABLE_REFLEXION=false
ENABLE_CAUSAL_RECALL=false
TRAJECTORY_RETENTION_DAYS=90
NIGHTLY_LEARNER_ENABLED=false
NIGHTLY_LEARNER_CRON=0 0 * * *

# Performance Configuration
CATALOG_SEARCH_LIMIT=50
FINAL_RECOMMENDATIONS_COUNT=4
PARALLEL_AGENT_TIMEOUT_MS=5000
MAX_RETRIES=3
RETRY_BASE_DELAY_MS=1000

# Security Configuration
ENABLE_RATE_LIMITING=true
ENABLE_REQUEST_VALIDATION=true
ENABLE_CORS=true
CORS_ORIGIN=*

# Privacy Configuration
ENABLE_TRAJECTORY_STORAGE=true
ENABLE_USER_ANALYTICS=true
ANONYMIZE_USER_DATA=true
